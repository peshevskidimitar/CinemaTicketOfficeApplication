@model CinemaTicketOffice.Domain.DTO.Identity.UserLoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container flex-grow-1 d-flex flex-column">
    <div class="row flex-grow-1 justify-content-center align-items-center">
        <div class="col-12 col-lg-8 col-xxl-6">
            <form asp-action="Login" asp-controller="Account" method="post">
                <h1>Login</h1>
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                            <label asp-for="@Model.Email"></label>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating mb-3">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                            <label asp-for="@Model.Password"></label>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Login</button>
                            <a class="btn btn-secondary" asp-action="Register" asp-controller="Account">Register</a>
                        </div>
                    </div>
                </div>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </form>
        </div>
    </div>
</div>