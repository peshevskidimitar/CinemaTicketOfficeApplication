@model CinemaTicketOffice.Domain.Models.Domain.Ticket

@{
    ViewData["Title"] = "Details";
}

<div class="container flex-grow-1 d-flex flex-column">
    <div class="row flex-grow-1 justify-content-center align-items-center">
        <div class="col-12 col-lg-8 col-xxl-6">
            <h1>Details</h1>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.MovieName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.MovieName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.MovieGenre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.MovieGenre)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.MovieCoverImage)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.MovieCoverImage)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.MovieDescription)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.MovieDescription)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Time)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Time)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>

            <div>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
