@model CinemaTicketOffice.Domain.DTO.Domain.AddToShoppingCartDTO
@{
    ViewData["Title"] = "Add to Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container flex-grow-1 d-flex flex-column">
    <div class="row flex-grow-1 justify-content-center align-items-center">
        <div class="col-12 col-lg-8 col-xxl-6">
            <h1>Add to Cart</h1>
            <form method="post" asp-action="AddTicketToCart">
                <input type="hidden" asp-for="SelectedTicketId" />
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input disabled asp-for="SelectedTicket.MovieName" class="form-control" />
                            <label asp-for="SelectedTicket.MovieName"></label>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="number" asp-for="Quantity" class="form-control" />
                            <label asp-for="Quantity"></label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a class="btn btn-secondary" asp-controller="Tickets" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>